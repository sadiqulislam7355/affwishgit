# AFFWISH CPA Network - Environment Configuration

# Database Configuration (MySQL/cPanel)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_cpanel_username_dbuser
DB_PASSWORD=your_database_password
DB_NAME=your_cpanel_username_affwish
DB_SSL=false

# Application Settings
APP_URL=https://yourdomain.com
APP_NAME="AFFWISH CPA Network"
NODE_ENV=production

# Security Keys (Generate new ones for production)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_32_character_encryption_key

# Email Configuration (cPanel Email)
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_email_password
SMTP_SECURE=true
SMTP_FROM_NAME="AFFWISH Network"

# Fraud Protection (Optional)
IPQUALITYSCORE_API_KEY=your_ipqualityscore_api_key

# Tracking Domains
TRACKING_DOMAIN=track.yourdomain.com
POSTBACK_DOMAIN=postback.yourdomain.com

# Payment Processing (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_TIMEOUT=604800
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30